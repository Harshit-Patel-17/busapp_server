<p id="notice"><%= notice %></p>

<h1>Listing Bus Stops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>District</th>
      <th>City</th>
      <th>State</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bus_stops.each do |bus_stop| %>
      <tr>
        <td><%= bus_stop.name %></td>
        <td><%= bus_stop.street %></td>
        <td><%= bus_stop.district %></td>
        <td><%= bus_stop.state %></td>
        <td><%= bus_stop.latitude %></td>
        <td><%= bus_stop.longitude %></td>
        <td><%= link_to 'Show', bus_stop %></td>
        <td><%= link_to 'Edit', edit_bus_stop_path(bus_stop) %></td>
        <td><%= link_to 'Destroy', bus_stop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

